@model IEnumerable<StarboundWorlds.Models.Planet>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Planet Names
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorldType)
        </th>
        <th>
            Moons
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{ item.PlanetName = item.inheritPlanetName(); }

            @Html.ActionLink(item.PlanetName, "Details", new { id = item.PlanetID }) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorldType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moons.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlanetID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PlanetID })
        </td>
    </tr>
}

</table>
