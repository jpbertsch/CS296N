@model StarboundWorlds.Models.StarSystem 
@*Strongly typed*@

@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>

<div>
    <h3>Star System</h3>
    <h4>
        @Html.DisplayFor(model => model.StarName)
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Xcoordinate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Xcoordinate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ycoordinate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ycoordinate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StarType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StarType)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Planets)
        </dt>

        @foreach (var p in Model.Planets)
        {
                p.PlanetName = p.inheritPlanetName(); 
            
            <dd>
                @Html.ActionLink(p.PlanetName,"Details","Planet", new { id = p.PlanetID }, null)
            </dd>
        }

    </dl>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StarSystemID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
