@model StarboundWorlds.Models.Planet

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Planet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StarSystem.StarName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StarSystem.StarName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Orbit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Orbit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DayLength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DayLength)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldSize)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldGravity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldGravity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Moons)
        </dt>
        @foreach (var m in Model.Moons)
        {
            m.MoonName = m.inheritMoonName(m.Orbit, m.Planet.Orbit, m.Planet.StarSystem.StarName);
            
            <dd>
                @Html.DisplayFor(x => m.MoonName)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlanetID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
