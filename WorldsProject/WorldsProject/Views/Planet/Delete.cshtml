@model WorldsProject.Models.Planet

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h3>Planet</h3>
    @{ Model.PlanetName = Model.inheritPlanetName(); }
    <h4>
        @Html.DisplayFor(model => model.PlanetName)
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Star
        </dt>
        <dd>
            @Html.ActionLink(Model.StarSystem.StarName, "Details", "StarSystem", new { id = Model.StarSystem.StarSystemID }, null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Orbit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Orbit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DayLength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DayLength)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldSize)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldGravity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldGravity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Moons)
        </dt>
        @foreach (var m in Model.Moons)
        {
            m.MoonName = m.inheritMoonName(m.Orbit, m.Planet.Orbit, m.Planet.StarSystem.StarName);

            <dd>
                @Html.ActionLink(m.MoonName, "Details", "Moon", new { id = m.MoonID }, null)
            </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
